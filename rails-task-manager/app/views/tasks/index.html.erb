
<% @tasks.each do |task| %>
  <h2><%= task.name %></h2>
  <p><%= task.description %></p>
  <p><%= task.completed %></p>

<%= link_to " go to edit", edit_task_path(task) %>
<%= link_to " go to show", task_path(task) %>
<%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
<% end %>
<%= link_to " create a new task", new_task_path %>
